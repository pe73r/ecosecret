<style>
  {% for block in section.blocks %}
      #block--{{ block.id }} .home-products__button{
            padding: 10px 60px;
            background-color: #fff;
            border: 1px solid {{ block.settings.color }};
            color: {{ block.settings.color }};
       }
   {% endfor %}
</style>
<section id="section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="home-products">
     <div class="home-products-container">
         <div class="home-products__header">
              <h2 class="medium home-products__title">{{ section.settings.title }}</h2>
         </div>
         <div class="grid grid--bottom">
              {% for block in section.blocks %}
                  <div class="1/3--lap-and-up grid__cell align-center">
                        <div id="block--{{ block.id }}" data-block-id="{{ block.id }}">
                           {% include 'image' with img : block.settings.image, class: 'full-width home-products__image' %}
                           <h2 class="dear-type home-products__name">{{ block.settings.name }}</h2>
                           <h3 class="medium">{{ block.settings.description }}</h3>
                           <h4 class="medium">{{ block.settings.price }}</h4>
                           <button class="home-products__button" type="button" name="button">{{ block.settings.button_text }}</button>
                       </div>
                  </div>
              {% endfor %}
         </div>
     </div>
</section>
