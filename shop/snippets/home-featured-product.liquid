<style>
      #section--{{ section.id }} .featured-product__button{
            padding: 10px 60px;
            background-color: #fff;
            border: 1px solid {{ section.settings.color }};
            color: {{ section.settings.color }};
       }
</style>
<section id="section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="home-products">
           <div class="relative full-width">
               <div class="featured-product-lines full-width">
                     <div class="featured-product-line"></div>
                     <div class="featured-product-line"></div>
                     <div class="featured-product-line product-line-red"></div>
                     <div class="featured-product-line"></div>
               </div>
           </div>
           <div class="featured-product-container">
               <div class="grid grid--center grid--middle">
                       <div class="1/3--lap-and-up grid__cell align-center featured-product__left">
                             {% include 'image' with img : section.settings.product, class: 'full-width align-center featured-product_image' %}
                       </div>
                       <div class="2/3--lap-and-up grid__cell relative">
                            <div class="featured-product__flex">
                                 <div class="featured-product__bubble">
                                      {% include 'image' with img : section.settings.bubble, class: 'full-width desktop-only' %}
                                </div>
                            </div>
                            <div class="featured-product__content">
                                <h3 class="dear-type featured-product__subtitle">{{ section.settings.subtitle }}</h3>
                                <h2 class="medium featured-product__title">{{ section.settings.title }}</h2>
                                <div class="medium featured-product__description">{{ section.settings.description }}</div>
                                <div class="medium featured-product__price">{{ section.settings.price }}</div>
                                <button class="featured-product__button" type="button" name="button">{{ section.settings.button_text }}</button>
                            </div>
                      </div>
              </div>
         </div>
</section>
