<section id="section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="history-addicts">
     <div class="large__container">
            <div class="grid grid--middle">
                    <div class="1/2--lap-and-up grid__cell">
                        <div class="history-addicts__content align-right">
                             <h2 class="dear-type history-addicts__title">{{ section.settings.title }}</h2>
                             <div class="medium history-addicts__text">{{ section.settings.content }}</div>
                             {% include 'image' with img : section.settings.image-left, class: 'full-width' %}
                        </div>
                    </div>
                    <div class="1/2--lap-and-up grid__cell line-height">
                          <div class="image">
                                {% include 'image' with img : section.settings.image-right, class: 'full-width desktop-only' %}
                          </div>
                    </div>
            </div>
      </div>
</section>

{% schema %}
{
  "name": "history addicts",
  "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "text"
        },
        {
          "type": "image_picker",
          "id": "image-left",
          "label": "image left"
        },
        {
          "type": "image_picker",
          "id": "image-right",
          "label": "image right"
        }

  ]
}
{% endschema %}
