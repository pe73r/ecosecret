
{% include 'home-products' %}

{% schema %}
{
  "name": "Home products",
  "class": "section-margin-large", 
  "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "title",
        "default": "title"
      }
  ],
  "blocks": [
    {
      "type": "product-block",
      "name": "Product block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "label"
        },
        {
          "type": "text",
          "id": "name",
          "label": "product name",
          "default": "product name"
        },
        {
          "type": "text",
          "id": "description",
          "label": "description",
          "default": "description",
           "info": "introduce <br> to insert a line break"
        },
        {
          "type": "text",
          "id": "price",
          "label": "price"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "button text",
          "default": "je le veux"
        },
        {
           "type":      "select",
           "id":        "color",
           "label":     "Button color",
           "options": [
             {
               "value": "#193063",
               "label": "blue"
             },
             {
               "value": "#f46156",
               "label": "red"
             }
           ],
           "default":   "#f46156"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Homepage products section"
      },
      "category": {
        "en": "Homepage"
      }
    }
  ]
}
{% endschema %}
